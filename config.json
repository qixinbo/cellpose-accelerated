{
    "name": "CellposeUNet",
    "arch": {
        "type": "CellposeModel",
        "args": {
            "nout": 3,
            "kernel_size": 3,
            "residual_on": 1,
            "style_on": 1,
            "concatenation": 0
        }
    },
    "dataset": {
        "type": "CellposeDataset",
        "args":{
            "data_dir": "data/",
            "channel": 1,
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.2,
            "weight_decay": 0.00001,
            "momentum": 0.9
        }
    },
    "loss": "cellpose_loss",
    "metrics": [
        "iou"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 10,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "num_epochs": 20,
        "save_dir": "saved/",
        "train_dataloader_args": {
           "batch_size": 8, 
           "shuffle": true,
           "num_workers": 2
        },
        "eval_dataloader_args": {
           "batch_size": 8, 
           "shuffle": false,
           "num_workers": 1
        }
    }
}
