{
    "name": "CellposeUNet",
    "arch": {
        "type": "CellposeModel",
        "args": {
            "nout": 3,
            "kernel_size": 3,
            "residual_on": 1,
            "style_on": 1,
            "concatenation": 0
        }
    },
    "dataset": {
        "type": "createCellposeDataset",
        "args":{
            "data_dir": "data/",
            "validation_split": 0.1,
            "chan": 1,
            "chan2": 0,
            "img_filter": "_img",
            "mask_filter": "_masks",
            "look_one_level_down": false
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.2,
            "weight_decay": 0.00001,
            "momentum": 0.9
        }
    },
    "loss": "cellpose_loss",
    "metrics": [
        "iou"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 10,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "num_epochs": 20,
        "save_dir": "saved/",
        "train_dataloader_args": {
           "batch_size": 8, 
           "shuffle": true,
           "num_workers": 2
        },
        "eval_dataloader_args": {
           "batch_size": 8, 
           "shuffle": false,
           "num_workers": 2
        }
    }
}
